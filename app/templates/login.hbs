{{page-title "Login"}}

<div class="w-screen h-screen flex items-center justify-center bg-black">
  <div class="flex flex-col items-center justify-center w-1/3">
    <Ui::Input @value={{this.password}} @type="password" @onInput={{fn (mut this.password)}} @placeholder="password" class="mb-2 w-full" />
      <div class="mb-6 text-red-500 w-full h-6">
        {{#if this.errorMessage}}
          {{this.errorMessage}}
        {{/if}}
      </div>
    <Ui::Button class="bg-green-300 text-gray-700 w-full h-10" @onClick={{perform this.authenticate}}>Login</Ui::Button>
  </div>
</div>
